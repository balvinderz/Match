<?xml version="1.0" encoding="utf-8"?>


    <ScrollView
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/imageinfinalbook"
        android:src="@drawable/placeholder"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameinfinalbook"
        android:text="Name"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:textColor="#000"

        android:layout_marginStart="10dp"
        android:layout_below="@id/imageinfinalbook"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="Match"
        android:textColor="#000"

        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mobileinfinalbook"
        android:text="Mobile"
        android:textColor="#000"

        android:layout_below="@+id/nameinfinalbook"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emailinfinalbook"
        android:text="Email"
        android:textColor="#000"

        android:layout_below="@+id/mobileinfinalbook"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailinfinalbook"
        android:id="@+id/table"
        android:stretchColumns="1"

        android:layout_marginTop="10dp">
        <TableRow>
            <TextView
                android:text="Number of slots Booked"
                android:padding="3dip"
                android:textColor="#000"
                />
            <TextView
                android:text="placeholder text"
                android:id="@+id/numberofslotsbooked"
                android:gravity="end"
                android:layout_marginEnd="10dp"
                android:textColor="#000"

                android:padding="3dip" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="Date"
                android:textColor="#000"

                android:padding="3dip" />
            <TextView
                android:text="placeholder date"
                android:id="@+id/dateinfinalbook"
                android:gravity="end"
                android:textColor="#000"

                android:layout_marginEnd="10dp"

                android:padding="3dip" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="Rate per hour"
                android:textColor="#000"

                android:padding="3dip" />
            <TextView
                android:text="1200 Rs"
                android:gravity="right"
                android:layout_marginEnd="10dp"
                android:textColor="#000"

                android:padding="3dip" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="Total"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#000"
                android:padding="3dip" />
            <TextView
                android:text="placeholder total"
                android:id="@+id/totalinfinalbooking"
                android:gravity="right"
                android:textSize="25sp"
                android:textColor="#000"

                android:layout_marginEnd="10dp"
                android:padding="3dip" />
        </TableRow>
    </TableLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/table"
        android:layout_margin="20dp"
        android:text="Pay NOW"
        android:id="@+id/paynow"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/table"
        android:layout_margin="20dp"
        android:text="Pay Later"
        android:layout_toEndOf="@+id/paynow"
        android:id="@+id/paylaterinbook"/>
    </RelativeLayout>
    </ScrollView>
