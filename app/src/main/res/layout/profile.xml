<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:background="#fff">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:id="@+id/posts"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_toEndOf="@+id/black"
                android:layout_marginEnd="10dp"
                android:textColor="#000"
                android:layout_margin="10dp"
                android:text="My posts"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mailblack"
                android:layout_alignParentStart="true"
                android:id="@+id/black"

                android:layout_marginTop="10dp"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="gone"
            android:background="#707070"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:id="@+id/mybookings"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginEnd="10dp"
                android:textColor="#000"
                android:layout_toEndOf="@id/bookblack"
                android:layout_margin="10dp"
                android:text="My Bookings"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bookblack"
                android:layout_alignParentStart="true"

                android:id="@+id/bookblack"
                android:layout_marginTop="10dp"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#707070"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:id="@+id/accountsetting"

            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginEnd="10dp"
                android:textColor="#000"
                android:layout_margin="10dp"
                android:layout_toEndOf="@+id/account"
                android:text="Account Settings"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/settingprofile"
                android:id="@+id/account"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#707070"
            />
    </LinearLayout>
</ScrollView>