<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="vertical">
   <android.support.v7.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="horizontal"
           android:background="#f8f9fa"
           android:layout_height="wrap_content">
           <de.hdodenhof.circleimageview.CircleImageView
               android:layout_width="80dp"
               android:layout_height="80dp"
               android:id="@+id/imageofpost"
               android:src="@drawable/placeholder"
               android:layout_gravity="start|center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/nameofposter"
                android:layout_marginLeft="10dp"
                android:text="place holder name"/>

       </LinearLayout>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:id="@+id/date"
               android:text="placeholder date"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"

               android:text="placeholder post message"
               android:id="@+id/postmessage"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:background="#f8f9fa"
               android:layout_height="wrap_content">
               <Button
                   android:layout_width="wrap_content"
                   android:drawableStart="@drawable/commenticon"
                   android:text="  Comment"
                   android:textAllCaps="false"
                   android:id="@+id/commentsbutton"
                   style="@style/Base.Widget.AppCompat.Button.Borderless"
                   android:layout_marginTop="10dp"
                   android:layout_height="wrap_content" />
               <Button
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:text=" Mobile"
                   android:id="@+id/contactno"
                   android:textAllCaps="false"
                   style="@style/Base.Widget.AppCompat.Button.Borderless"
                   android:drawableStart="@drawable/phone"/>

           </LinearLayout>
       </LinearLayout>

   </android.support.v7.widget.CardView>

</LinearLayout>